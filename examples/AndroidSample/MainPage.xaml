<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AndroidSample"
             x:Class="AndroidSample.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="Start" Text="Start" Command="{Binding StartCommand}"></Button>
            <Button x:Name="Stop" Text="Stop" Command="{Binding StopCommand}"></Button>
            <Button x:Name="SendMessage" Text="Send Message" Command="{Binding SendMessageCommand}" ></Button>
            <Label Text="{Binding ConnectionStatus}"></Label>
            <Label Text="{Binding Info}"></Label>
            <Label Text="{Binding SentMessage}"></Label>
            <Label Text="{Binding ReceivedMessage}"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>